# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

use_frameworks!

target 'VK Client' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  # Pods for VK Client
  pod 'Alamofire'
  pod 'RealmSwift'
  pod 'SwiftKeychainWrapper'
  pod 'AlamofireImage'
  pod 'Neon'
  pod 'PromiseKit/CorePromise', '~> 6.0'
  pod 'PromiseKit/Alamofire', '~> 6.0'
  pod 'Firebase/Core'
  pod 'Firebase/Database'
end

target 'VK 5 Friends Extension' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    # Pods for VK Client
    # pod 'Alamofire'
    pod 'RealmSwift'
end

target 'iMessage' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    # Pods for VK Client
    pod 'AlamofireImage'
    pod 'RealmSwift'
end

